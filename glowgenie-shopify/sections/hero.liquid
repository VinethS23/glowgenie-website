<section id="hero" class="hero-section">
  <style>
    .hero-section {
      min-height: 100vh;
      display: flex;
      align-items: center;
      background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-white) 100%);
      padding-top: var(--menu-height);
    }

    .hero-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: var(--space-lg) var(--space-sm);
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-lg);
      align-items: center;
    }

    .hero-content {
      max-width: 600px;
    }

    .hero-tagline {
      font-size: 0.9rem;
      color: var(--color-primary);
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: var(--space-sm);
    }

    .hero-title {
      font-family: var(--font-heading);
      font-size: 3.5rem;
      color: var(--color-text);
      line-height: 1.2;
      margin-bottom: var(--space-md);
    }

    .hero-title-accent {
      color: var(--color-primary);
    }

    .hero-description {
      font-size: 1.1rem;
      color: var(--color-text-light);
      margin-bottom: var(--space-md);
      line-height: 1.8;
    }

    .hero-cta-group {
      display: flex;
      gap: var(--space-sm);
      flex-wrap: wrap;
    }

    .hero-cta {
      display: inline-block;
      padding: var(--space-sm) var(--space-md);
      font-size: 1rem;
      text-decoration: none;
      border-radius: 30px;
      transition: all 0.3s ease;
    }

    .hero-cta-primary {
      background: var(--color-primary);
      color: var(--color-white);
    }

    .hero-cta-primary:hover {
      background: #234a1f;
      transform: translateY(-2px);
    }

    .hero-cta-secondary {
      background: transparent;
      color: var(--color-primary);
      border: 2px solid var(--color-primary);
    }

    .hero-cta-secondary:hover {
      background: var(--color-primary);
      color: var(--color-white);
    }

    .hero-image-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .hero-image-placeholder {
      width: 100%;
      max-width: 500px;
      aspect-ratio: 1;
      background: linear-gradient(145deg, var(--color-primary), #4a8a42);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-white);
      font-size: 1.5rem;
      text-align: center;
      padding: var(--space-md);
    }

    .hero-image {
      width: 100%;
      max-width: 500px;
      border-radius: 50%;
      object-fit: cover;
    }

    @media (max-width: 1024px) {
      .hero-title {
        font-size: 2.75rem;
      }
    }

    @media (max-width: 768px) {
      .hero-container {
        grid-template-columns: 1fr;
        text-align: center;
        padding: var(--space-md) var(--space-sm);
      }

      .hero-content {
        order: 2;
        max-width: 100%;
      }

      .hero-image-wrapper {
        order: 1;
      }

      .hero-title {
        font-size: 2.25rem;
      }

      .hero-cta-group {
        justify-content: center;
      }

      .hero-image-placeholder {
        max-width: 300px;
      }
    }
  </style>

  <div class="hero-container">
    <div class="hero-content">
      <p class="hero-tagline">{{ section.settings.tagline | default: 'Natural Beauty Awaits' }}</p>
      <h1 class="hero-title">
        {{ section.settings.title_line1 | default: "Unlock Your Skin's" }} <span class="hero-title-accent">{{ section.settings.title_accent | default: 'Natural Glow' }}</span>
      </h1>
      <p class="hero-description">
        {{ section.settings.description | default: "Discover the power of nature with GlowGenie's carefully crafted skincare solutions. Our products harness organic ingredients to reveal your most radiant, healthy skin." }}
      </p>
      <div class="hero-cta-group">
        <a href="{{ section.settings.cta_primary_link | default: '#cta' }}" class="hero-cta hero-cta-primary">
          {{ section.settings.cta_primary_text | default: 'Shop Now' }}
        </a>
        <a href="{{ section.settings.cta_secondary_link | default: '#benefits' }}" class="hero-cta hero-cta-secondary">
          {{ section.settings.cta_secondary_text | default: 'Learn More' }}
        </a>
      </div>
    </div>
    <div class="hero-image-wrapper">
      {% if section.settings.hero_image %}
        <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="{{ section.settings.hero_image_alt | default: 'Hero Image' }}" class="hero-image">
      {% else %}
        <div class="hero-image-placeholder">
          [Product Image Placeholder]
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Natural Beauty Awaits"
    },
    {
      "type": "text",
      "id": "title_line1",
      "label": "Title (First Part)",
      "default": "Unlock Your Skin's"
    },
    {
      "type": "text",
      "id": "title_accent",
      "label": "Title (Accent Part)",
      "default": "Natural Glow",
      "info": "This text will be highlighted in the primary color"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover the power of nature with GlowGenie's carefully crafted skincare solutions. Our products harness organic ingredients to reveal your most radiant, healthy skin."
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "hero_image_alt",
      "label": "Image Alt Text",
      "default": "Hero Image"
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "cta_primary_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "cta_primary_link",
      "label": "Primary Button Link",
      "default": "#cta",
      "info": "Use # for anchor links (e.g., #cta) or full URLs"
    },
    {
      "type": "text",
      "id": "cta_secondary_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "text",
      "id": "cta_secondary_link",
      "label": "Secondary Button Link",
      "default": "#benefits",
      "info": "Use # for anchor links (e.g., #benefits) or full URLs"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
