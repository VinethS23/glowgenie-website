<section id="video" class="video-section">
  <style>
    .video-section {
      padding: var(--space-xl) var(--space-sm);
      background: var(--color-secondary);
    }

    .video-container {
      max-width: 1000px;
      margin: 0 auto;
    }

    .video-header {
      text-align: center;
      margin-bottom: var(--space-md);
    }

    .video-subtitle {
      font-size: 0.9rem;
      color: var(--color-primary);
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: var(--space-xs);
    }

    .video-title {
      font-family: var(--font-heading);
      font-size: 2.5rem;
      color: var(--color-text);
    }

    .video-wrapper {
      position: relative;
      width: 100%;
      padding-bottom: 56.25%; /* 16:9 aspect ratio */
      background: var(--color-text);
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
    }

    .video-placeholder {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: var(--color-white);
      background: linear-gradient(145deg, #1a1a1a, #333);
    }

    .video-play-button {
      width: 80px;
      height: 80px;
      background: var(--color-primary);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: var(--space-sm);
      cursor: pointer;
      transition: transform 0.3s ease, background 0.3s ease;
    }

    .video-play-button:hover {
      transform: scale(1.1);
      background: #234a1f;
    }

    .video-play-icon {
      width: 0;
      height: 0;
      border-top: 15px solid transparent;
      border-bottom: 15px solid transparent;
      border-left: 25px solid var(--color-white);
      margin-left: 5px;
    }

    .video-placeholder-text {
      font-size: 1rem;
      opacity: 0.8;
    }

    .video-iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .video-caption {
      text-align: center;
      margin-top: var(--space-sm);
      color: var(--color-text-light);
      font-size: 0.9rem;
    }

    @media (max-width: 768px) {
      .video-section {
        padding: var(--space-lg) var(--space-sm);
      }

      .video-title {
        font-size: 2rem;
      }

      .video-play-button {
        width: 60px;
        height: 60px;
      }

      .video-play-icon {
        border-top: 12px solid transparent;
        border-bottom: 12px solid transparent;
        border-left: 20px solid var(--color-white);
      }
    }
  </style>

  <div class="video-container">
    <div class="video-header">
      <p class="video-subtitle">{{ section.settings.subtitle | default: 'See It In Action' }}</p>
      <h2 class="video-title">{{ section.settings.title | default: 'Watch Our Story' }}</h2>
    </div>

    <div class="video-wrapper">
      {% if section.settings.video_url != blank %}
        {% if section.settings.video_url contains 'youtube.com' or section.settings.video_url contains 'youtu.be' %}
          {% assign video_id = section.settings.video_url | split: 'v=' | last | split: '&' | first %}
          {% if section.settings.video_url contains 'youtu.be' %}
            {% assign video_id = section.settings.video_url | split: 'youtu.be/' | last | split: '?' | first %}
          {% endif %}
          <iframe
            class="video-iframe"
            src="https://www.youtube.com/embed/{{ video_id }}"
            title="{{ section.settings.title }}"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        {% elsif section.settings.video_url contains 'vimeo.com' %}
          {% assign video_id = section.settings.video_url | split: 'vimeo.com/' | last | split: '?' | first %}
          <iframe
            class="video-iframe"
            src="https://player.vimeo.com/video/{{ video_id }}"
            title="{{ section.settings.title }}"
            frameborder="0"
            allow="autoplay; fullscreen; picture-in-picture"
            allowfullscreen>
          </iframe>
        {% else %}
          <div class="video-placeholder">
            <div class="video-play-button">
              <div class="video-play-icon"></div>
            </div>
            <p class="video-placeholder-text">[Video Embed Placeholder]</p>
          </div>
        {% endif %}
      {% else %}
        <div class="video-placeholder">
          <div class="video-play-button">
            <div class="video-play-icon"></div>
          </div>
          <p class="video-placeholder-text">[Video Embed Placeholder]</p>
        </div>
      {% endif %}
    </div>

    {% if section.settings.caption != blank %}
      <p class="video-caption">{{ section.settings.caption }}</p>
    {% else %}
      <p class="video-caption">Discover how GlowGenie transforms your skincare routine</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "See It In Action"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Watch Our Story"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "Video URL",
      "accept": ["youtube", "vimeo"],
      "info": "Accepts YouTube or Vimeo URLs"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Caption",
      "default": "Discover how GlowGenie transforms your skincare routine"
    }
  ],
  "presets": [
    {
      "name": "Video"
    }
  ]
}
{% endschema %}
